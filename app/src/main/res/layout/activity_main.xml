<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <include layout="@layout/title_bar"/>

    <!---->
    <FrameLayout
        android:id="@+id/center_content_frameLayout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <!--底部-->
    <RadioGroup
        android:id="@+id/bootom_button_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/story_radio_button"
            android:drawableTop="@drawable/rb_common_selector"
            android:text="爱的故事"
            style="@style/menu_bootom_style"
            />

        <RadioButton
            android:id="@+id/told_radio_button"
            android:drawableTop="@drawable/rb_common_selector"
            android:text="爱的叮嘱"
            style="@style/menu_bootom_style"
            />
        <RadioButton
            android:id="@+id/chat_radio_button"
            android:drawableTop="@drawable/rb_common_selector"
            android:text="爱的密语"
            style="@style/menu_bootom_style"
            />
        <RadioButton
            android:id="@+id/person_radio_button"
            android:drawableTop="@drawable/rb_common_selector"
            android:text="个人中心"
            style="@style/menu_bootom_style"
            />

    </RadioGroup>

</LinearLayout>